@model  HouseRentalMVCProject.Models.TblContact
@{
    ViewBag.Title = "Contact";
}

<div class="contact" id="contact">
        <div class="container">
            <div class="w3-heading-all">
                <h3>Contact Us</h3>
            </div>
            <div class="agile-contact-grids">
                <div class="col-md-5 address">
                    <h4>Contact Info</h4>
                    <div class="address-row">
                        <div class="col-md-2 w3-agile-address-left">
                            <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                        </div>
                        <div class="col-md-10 w3-agile-address-right">
                            <h5>Visit Us</h5>
                            <p>JK House Rental Services,<br />Ahemdabad City <br />Gujrat - India</p>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                    <div class="address-row">
                        <div class="col-md-2 w3-agile-address-left">
                            <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                        </div>
                        <div class="col-md-10 w3-agile-address-right">
                            <h5>Mail Us</h5>
                            <p><a href="#"> jkhouserental@gmail.com</a></p>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                    <div class="address-row">
                        <div class="col-md-2 w3-agile-address-left">
                            <span class="glyphicon glyphicon-phone" aria-hidden="true"></span>
                        </div>
                        <div class="col-md-10 w3-agile-address-right">
                            <h5>Call Us</h5>
                            <p>+91 8585968585</p>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                </div>
                <div class="col-md-7 contact-form">
                    <form action="#" method="post">
                        @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                        {
                            <div class="text">@Html.TextBoxFor(m => m.firstName)</div>
                            <div class="text">@Html.TextBoxFor(m => m.lastName)</div>
                            <div class="number">@Html.TextBoxFor(m => m.mobile)</div>
                            <div class="email">@Html.TextBoxFor(m => m.email)</div>
                            <div class="text">@Html.TextBoxFor(m => m.message)</div>

                            <br /><input type="submit" class="btnBookNow" id="btnSend" value="Send">
                        }
                        <b>@ViewBag.saveresult</b>
                    </form>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>


